<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Состояние кнопки при нажатии -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#388E3C"/> <!-- Темнее при нажатии -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#2E7D32"/> <!-- Тонкая граница -->
            <padding android:left="20dp" android:right="20dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Обычное состояние кнопки -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- Основной цвет кнопки -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#388E3C"/> <!-- Граница -->
            <padding android:left="20dp" android:right="20dp" android:top="10dp" android:bottom="10dp"/>

            <!-- Добавляем тень -->
            <shadowColor android:color="#1B5E20"/>
            <shadowDx>4</shadowDx>
            <shadowDy>4</shadowDy>
            <shadowRadius>8</shadowRadius>
        </shape>
    </item>

</selector>
